# 📌 Archivo de configuración `.env.dev`
# Variables de entorno específicas para el entorno de Desarrollo

# 🏗️ Configuración General
INSTANCE=dev
ODOO_ENV=development  # 📌 Define el entorno de Odoo como desarrollo
ODOO_PORT=8069        # 🔌 Puerto HTTP de Odoo en desarrollo
DEBUGPY_PORT=5678     # 🐍 Puerto para depuración con DebugPy

# 🐘 Configuración de PostgreSQL
PGHOST=dev-postgres       # 📌 Nombre del contenedor PostgreSQL en Dev
PGPORT=5432               # 🔌 Puerto estándar de PostgreSQL
PGUSER=odoo               # 👤 Usuario de PostgreSQL
PGPASSWORD=odoo_password  # 🔑 Contraseña de PostgreSQL
PGDATABASE=odoo_dev       # 🗄️ Base de datos de Odoo en Dev

# 🔴 Configuración de Redis
REDIS_HOST=dev-redis   # 📌 Nombre del contenedor Redis en Dev
REDIS_PORT=6380        # 🔌 Puerto alternativo para Redis en Dev
REDIS_PASSWORD=        # 🔐 (Vacío para desarrollo, recomendable en producción)
REDIS_MAXMEMORY=256mb  # 📦 Límite de memoria para Redis
REDIS_MAXMEMORY_POLICY=noeviction  # 🚀 Política de eliminación de memoria
REDIS_APPENDONLY=no    # 📂 Persistencia AOF desactivada en desarrollo

# 🛢️ Configuración de Backups
BACKUP_INTERVAL=43200  # ⏳ Intervalo de backups en segundos (12 horas en desarrollo)

# 🔧 Variables adicionales
SESSION_REDIS_HOST=dev-redis  # 🔗 Redis como backend de sesiones
SESSION_REDIS_PORT=6380
