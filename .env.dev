 # 🌍 CONFIGURACIÓN DE ODOO EN DESARROLLO
ODOO_ENV=development  # 🏗️ Activa el modo desarrollo
ODOO_PORT=8069        # 🌐 Puerto de Odoo

# 🛢️ CONFIGURACIÓN DE POSTGRESQL
DB_HOST=prueba-postgres    # 📌 Servidor de BD
DB_NAME=odoo               # 📂 Base de datos usada
DB_USER=odoo               # 👤 Usuario de BD
DB_PASSWORD=odoo_password  # 🔑 Contraseña de BD

# 🚀 CONFIGURACIÓN DE REDIS
CACHE_DATABASE=odoo_cache        # 🗄️ Base de datos de caché
SESSION_REDIS_HOST=prueba-redis  # 📌 Servidor Redis
SESSION_REDIS_PORT=6379          # 🔴 Puerto de Redis

# 🔍 DEBUGPY PARA DEPURACIÓN REMOTA
DEBUGPY_PORT=5678  # 🐞 Puerto para DebugPy
