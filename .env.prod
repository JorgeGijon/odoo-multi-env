#-----------------------------------------------------------------------------
#Ejecutar en Desarrollo:
#docker-compose -f docker-compose.yml -f docker-compose.override.prod.yml up -d
#-----------------------------------------------------------------------------
# 🌍 CONFIGURACIÓN DE ODOO EN PRODUCCIÓN
ODOO_ENV=production  # 🚀 Modo producción activado
ODOO_PORT=8069       # 🌐 Puerto de Odoo en Producción

# 🛢️ CONFIGURACIÓN DE POSTGRESQL
DB_HOST=prueba-postgres           # 📌 Servidor de BD
DB_NAME=odoo_prod                 # 📂 Base de datos en Producción
DB_USER=odoo                      # 👤 Usuario de BD
DB_PASSWORD=odoo_secure_password  # 🔒 Contraseña segura

# 🚀 CONFIGURACIÓN DE REDIS
CACHE_DATABASE=odoo_cache_prod   # 🗄️ Base de datos de caché para Producción
SESSION_REDIS_HOST=prueba-redis  # 📌 Servidor Redis
SESSION_REDIS_PORT=6379          # 🔴 Puerto de Redis en Producción

# 🌐 CONFIGURACIÓN DE NGINX
NGINX_PORT_HTTP=80    # 🚀 Puerto HTTP
NGINX_PORT_HTTPS=443  # 🔒 Puerto HTTPS

